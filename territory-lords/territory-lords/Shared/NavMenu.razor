
<MudPaper Width="250px" Class="py-3" Square="true">
    <MudNavMenu>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Thanks Civilization</MudText>
        <MudDivider Class="my-2" />

        <MudNavLink Href="/" Icon="@Icons.Filled.Home">Home</MudNavLink>

        <AuthorizeView>
            <Authorized>
                <MudNavGroup Title="Games" Expanded="_gamesDrawerOpen" Icon="@Icons.Filled.Games">
                    <MudNavLink Href="/Games" Icon="@Icons.Filled.List">My Games</MudNavLink>
                    <MudNavLink Href="/CreateGame" Icon="@Icons.Filled.Add">New Game</MudNavLink>
                    <MudNavLink Href="/Map/10" Icon="@Icons.Rounded.BubbleChart">Random Game</MudNavLink>
                </MudNavGroup>
            </Authorized>
        </AuthorizeView>

        <MudNavLink Href="/About" Icon="@Icons.Filled.Info">About</MudNavLink>

        <LoginDisplay/>
        @*<LoginControl />*@

    </MudNavMenu>
</MudPaper>




@code{
    bool _gamesDrawerOpen = true;

    void GamesDrawerToggle()
    {
        _gamesDrawerOpen = !_gamesDrawerOpen;
    }
}
